{% extends 'base.html.twig' %}

{% block title %}
    Clients de l'hotel
{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-12 text-center">
            <h1>Clients</h1>

            <table class="table table-striped">

                <thead>
                    <tr>
                        <th>N°</th>
                        <th>Prénom</th>
                        <th>Nom de famille</th>
                        <th>Date d'entrée</th>
                        <th>Date de sortie</th>
                    </tr>
                </thead>

                <tbody>
                {% for client in clients %}
                <tr>
                    <td>
                        {{ client.id }}
                    </td>
                    <td>
                        {{ client.firstname }}
                    </td>
                    <td>
                        {{ client.lastname }}
                    </td>
                    <td>
                        {{ client.entry_date }}
                    </td>
                    <td>
                        {{ client.departure_date }}
                    </td>
                    <td>
                        <a href="{{ env.base_path ~ '/clients/' ~ client.id ~ '/edit' }}" class="btn btn-warning">Editer</a>
                        <a href="{{ env.base_path ~ '/clients/' ~ client.id ~ '/delete' }}" class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <a href="{{ env.base_path ~ '/clients/new/'}}" class="btn btn-primary">Crée un nouveau client</a>
        <a href="{{ env.base_path }}" class="btn btn-primary">Home</a>
        </div>
    </div>
</div>
{% endblock %}
